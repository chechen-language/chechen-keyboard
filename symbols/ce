// Symbols definition for a Chechen keyboard layout.
// Based on the Resolution of the Parliament of the Chechen Republic on the approval of the Chechen alphabet based on Latin script, 15 October 1992, No. 209.
// gushmazuko <gushmazuko@protonmail.com>

default partial alphanumeric_keys modifier_keys
xkb_symbols "basic" {

    include "us(basic)"

    name[Group1]= "Chechen (Latin, QWERTY, US)";

    key <AE09> { [      9,      parenleft,      ccedilla,   Ccedilla    ] }; // 9 ) ç Ç

    key <AD01> { [      q,      Q,              U0307                   ] }; // q Q ◌̇ (Combining Dot Above with AltGr: q̇ Q̇)
    key <AD03> { [      e,      E,              schwa,      SCHWA       ] }; // e E ə Ə
    key <AD05> { [      t,      T,              tabovedot,  Tabovedot   ] }; // t T ṫ Ṫ 
    key <AD07> { [      u,      U,              udiaeresis, Udiaeresis  ] }; // u U ü Ü
    key <AD09> { [      o,      O,              odiaeresis, Odiaeresis  ] }; // o O ö Ö
    key <AD10> { [      p,      P,              pabovedot,  Pabovedot   ] }; // p P ṗ Ṗ

    key <AC01> { [      a,      A,              adiaeresis, Adiaeresis  ] }; // a A ä Ä
    key <AC02> { [      s,      S,              scedilla,   Scedilla    ] }; // s S ş Ş
    key <AC05> { [      g,      G,              gabovedot,  Gabovedot   ] }; // g G ġ Ġ
    key <AC08> { [      k,      K,              U0307                   ] }; // k K ◌̇ (Combining Dot Above with AltGr: k̇ K̇)
    
    key <AB01> { [      z,      Z,              zstroke,    Zstroke     ] }; // z Z ƶ Ƶ
    key <AB02> { [      x,      X,              xabovedot,  Xabovedot   ] }; // x X ẋ Ẋ
    key <AB03> { [      c,      C,              cabovedot,  Cabovedot   ] }; // c C ċ Ċ
    key <AB06> { [      n,      N,              eng,        ENG         ] }; // n N ŋ Ŋ
    key <AB09> { [      period, greater,        U0307                   ] }; // . > ◌̇ (Combining Dot Above with AltGr for any letter)

    include "level3(ralt_switch)"
};
